{
  "name": "creation-editor",
  "version": "1.0.0",
  "description": "A powerful local creation editor for novel and story writers",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "vite --config configs/vite.config.ts",
    "build": "tsc --project configs/tsconfig.json && vite build --config configs/vite.config.ts",
    "preview": "vite preview --config configs/vite.config.ts",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:dir": "npm run build && electron-builder --dir",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src tests --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\" \"tests/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\" \"tests/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "quality:check": "npm run lint && npm run format:check && npm run test:ci",
    "prepare": "husky",
    "analyze:bundle": "npm run build && open dist/bundle-analysis.html",
    "analyze:bundle:ci": "npm run build",
    "perf:build": "NODE_ENV=production npm run build",
    "perf:profile": "npm run dev -- --mode profiling",
    "test:mutation": "stryker run",
    "test:mutation:selective": "stryker run --mutate \"src/features/outline/slices/*.ts\"",
    "test:mutation:report": "npm run test:mutation && open reports/mutation/index.html"
  },
  "keywords": [
    "editor",
    "novel",
    "writing",
    "electron",
    "react"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.creation.editor",
    "productName": "创作编辑器",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/jest-runner": "^9.0.1",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.0.0",
    "babel-jest": "^30.0.5",
    "concurrently": "^8.0.0",
    "depcheck": "^1.4.7",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.6.3",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "reselect": "^5.1.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vite-bundle-visualizer": "^1.2.1",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "@reduxjs/toolkit": "^1.9.0",
    "@tiptap/react": "^2.1.0",
    "@tiptap/starter-kit": "^2.1.0",
    "docx": "^9.5.1",
    "file-saver": "^2.0.5",
    "lowdb": "^6.1.1",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.0",
    "reactflow": "^11.11.4"
  }
}
